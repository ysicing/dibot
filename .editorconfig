root = true

[*]
indent_style = tab
indent_size = 4
tab_width = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true # 不保留行末的空格
insert_final_newline = true # 文件末尾添加一个空行

[*.go]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.yml]
indent_style = tab

[*.yaml]
indent_style = tab

[*.json]
indent_style = tab
